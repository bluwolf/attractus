<div class="row" >
  <div class="information-panel card col-lg-12">

    <% if @park %>
      <div class="card-image col-lg-6" >

        <%= image_tag (@park.image), :height=> "220px" %>
        <span class="card-title"><%= @park.name %></span>
      </div>

      <div class="card-content col-lg-6">
        <%= @park.description %>

      </div>
    <% else %>

    <% end %>
  </div>
</div>
