<div class="container section scrollspy" id="bottom-panel">


  <div class="row ">
    <div id="left-panel" class="col-lg-4 card-panel">

    </div>

    <div id="right-panel" class="col-lg-8 card-panel">

    </div>

  </div>

  <div class="row" >
    <div class="card col-lg-12">
        <div class="card-image col-lg-4" >

          <%= image_tag "test.jpg", :height=> "230px" %>
          <span class="card-title">Card Title</span>
        </div>

        <div class="card-content col-lg-8">
          <p>I am a very simple card. I am good at containing small bits of information.
           I am convenient because I require little markup to use effectively.</p>
        </div>

    </div>
  </div>




</div>


<script>

    //scrollspy upon enter
    document.getElementById('search-box').onkeypress = function(e){
      if (!e) e = window.event;
      var keyCode = e.keyCode || e.which;
      if (keyCode == '13'){
          // alert(  $("#search-box").find('input').val() );
          // $("#search-box").find('input').submit();


          var hash = "#bottom-panel";
          $('html, body').animate({

            scrollTop: $(hash).offset().top-50
          }, 800, function(){

            // Add hash (#) to URL when done scrolling (default click behavior)
            window.location.hash = hash;
          });

      }
    }


    // google map setup
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('right-panel'), {
          center: {lat: 34.0522, lng: -118.2437},
          zoom: 7
        });
      }
      // get geolocation of user
      if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(function (position) {
              initialLocation = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
              map.setCenter(initialLocation);
          });
      }



</script>
