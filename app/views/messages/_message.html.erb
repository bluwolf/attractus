<div class="row one-message">
  <div class="col-lg-offset-1 col-xs-offset-1">
    <div class="avatar col-lg-2 col-xs-2 text-center">
      <div class="row">
          <%= image_tag(message.user_avatar.url(:thumb), :class => "message-avatar") %>
      </div>
      <div class="row">
          <%= label_tag message.user_name, nil, class: 'message-username' %>
      </div>
    </div>
    <div class="message-content col-lg-10 col-xs-10 ">
        <p style="font-style: italic;"><%= message.content%></p>
    </div>
  </div>

</div>
